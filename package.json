    "@nestjs/platform-fastify": "^11.1.13",
    "@nestjs/schedule": "^6.1.1",
    "@nestjs/typeorm": "^11.0.0",
    "class-validator": "^0.14.3",
    "nodemailer": "^8.0.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
