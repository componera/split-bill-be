root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 150

[*.{ts, js}]
quote_type = single
curly_bracket_next_line = false
spaces_around_operators = true
spaces_around_brackets = both
indent_brace_style = K&R
indent_size = 4

[*.md]
max_line_length = off
trim_trailing_whitespace = false
